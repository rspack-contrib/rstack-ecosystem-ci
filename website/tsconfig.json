{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "noEmit": true
  },
  "include": [
    "rsbuild.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs",
    "src"
  ]
}
